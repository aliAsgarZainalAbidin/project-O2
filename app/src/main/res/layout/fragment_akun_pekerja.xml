<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foto_profil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <EditText
        android:id="@+id/et_nama_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_profil"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="Taufiq"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_usia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nama_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/calendar1"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="20 Tahun" />


    <EditText
        android:id="@+id/et_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_usia"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/icon_job"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="Mahasiswa" />


    <EditText
        android:id="@+id/et_gender_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pekerjaan"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/icon_gender"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="Pria" />


    <EditText
        android:id="@+id/et_email_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_gender_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/icon_email"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="taufiq.qu99@gmail.com" />


    <EditText
        android:id="@+id/et_telpon_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/phone1"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="0853-9752-2451" />


    <Button
        android:id="@+id/btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/btn_signout"
        android:text="Sign Out"
        android:textColor="@color/putih" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_signout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_regist"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Update Profil" />

</RelativeLayout>