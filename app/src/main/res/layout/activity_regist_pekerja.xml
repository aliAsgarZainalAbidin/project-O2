<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oa.needyou.pekerja.RegistPekerjaActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_regist"
        android:layout_width="300dp"
        android:layout_marginBottom="20dp"
        android:layout_height="220dp"/>

    <TextView
        android:id="@+id/tv1"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/hitam"
        android:text="Saat Ini Pendaftaran Sebagai Mitra Pekerja Hanya bisa Registrasi di Website Resmi di NeedYou.ID"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_above="@id/btn_login"
        android:id="@+id/btn_website"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_btn_login"
        android:text="Kunjungi Website"
        android:textStyle="bold" />

    <Button
        android:layout_above="@id/img1"
        android:id="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_btn_login"
        android:text="Login"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

</RelativeLayout>