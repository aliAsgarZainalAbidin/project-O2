<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.oa.needyou.pelanggan.RegistPelangganActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/logo" />

    <ImageView
        android:id="@+id/person2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_alignParentRight="true"
        android:src="@drawable/person_2" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-50dp"
        android:text="Create Account"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn_login"
        android:hint="Nama Lengkap"
        android:inputType="text"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/et_email_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_username"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_login"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp" />


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_update"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_pass1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_btn_login"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <ImageView
            android:id="@+id/img_showPass"
            android:src="@drawable/ic_remove_red_eye"
            android:layout_width="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_alignBottom="@id/et_pass1"
            android:layout_alignTop="@id/et_pass1"
            android:layout_alignRight="@id/et_pass1"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_regist"
        android:text="Regist Now"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/colorPrimary" />


</RelativeLayout>