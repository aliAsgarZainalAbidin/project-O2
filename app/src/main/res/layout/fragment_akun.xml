<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_profil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <EditText
        android:id="@+id/et_nama_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_profil"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="Nama"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_email_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nama_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/icon_email"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="contoh@gmail.com" />

    <EditText
        android:id="@+id/et_telpon_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/phone1"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="0853-9752-2451" />

    <EditText
        android:id="@+id/et_alamat_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_telpon_update"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/abuabu2"
        android:drawableLeft="@drawable/icon_address"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="Jalan COntoh" />

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/btn_signout"
        android:text="Sign Out"
        android:textColor="@color/putih" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_signout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_regist"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Update Profil" />


</RelativeLayout>